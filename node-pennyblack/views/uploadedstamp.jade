doctype html
html(lang="en")
        include includes/header
        script.
            $(document).ready(function() {
              var doneLeft = false;
              $('img').click(function(e) {
                var offset = $(this).offset();
                if (!doneLeft) {
                  $("#leftx").val(e.pageX - offset.left);
                  $("#lefty").val(e.pageY - offset.top);
                  doneLeft = true;
                } else {
                  $("#rightx").val(e.pageX - offset.left);
                  $("#righty").val(e.pageY - offset.top);
                }
              });
            });
        body
            include includes/topbar
            div.container
                div.jumbotron
                    legend #{pageTitle}
                    div.row
                        div.col-md-8
                            img(src="#{stampImg}",width="540", height="660",alt="penny black")
                        div.col-md-4
                            p Enter the information about the stamp...
                            form(method='post',action='/stampdata')
                                input(name='stampurl',class="form-control",type='hidden',value="#{stampImg}")
                                | Left Letter
                                select(name='letterleft',class="form-control",type='text')
                                    option(value="A") A
                                    option(value="B") B
                                    option(value="C") C
                                    option(value="D") D
                                    option(value="E") E
                                    option(value="F") F
                                    option(value="G") G
                                    option(value="H") H
                                    option(value="I") I
                                    option(value="J") J
                                    option(value="K") K
                                    option(value="L") L
                                    option(value="M") M
                                    option(value="N") N
                                    option(value="O") O
                                    option(value="P") P
                                    option(value="Q") Q
                                    option(value="R") R
                                    option(value="S") S
                                    option(value="T") T
                                | Left Point
                                input(id="leftx",name='leftx',class="form-control",type='text',readonly)
                                input(id="lefty",name='lefty',class="form-control",type='text',readonly)
                                | Right Letter
                                select(name='letterright',class="form-control",type='text')
                                    option(value="A") A
                                    option(value="B") B
                                    option(value="C") C
                                    option(value="D") D
                                    option(value="E") E
                                    option(value="F") F
                                    option(value="G") G
                                    option(value="H") H
                                    option(value="I") I
                                    option(value="J") J
                                    option(value="K") K
                                    option(value="L") L
                                | Right Point
                                input(id="rightx",name='rightx',class="form-control",type='text',readonly)
                                input(id="righty",name='righty',class="form-control",type='text',readonly)
                                input(name='submit',type='submit',class="btn btn-primary").submit-button
        include includes/footer


